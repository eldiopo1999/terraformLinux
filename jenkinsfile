pipeline {
     agent any
     stages {
         stage('SCM Checkout') {
              steps {
                 git(branch: 'main', credentialsId: 'eldiopo',  url: 'https://github.com/eldiopo1999/terraformLinux.git')
              }
         }
	 stage('Fomrate') {
               steps{
	         sh label: '', script: 'terraform fmt'
			  }
          }
     
         stage('Refresh') {
              steps{
	         sh label: '', script: 'terraform refresh'
		}
          }
     
         stage('Validate') {
             steps{
		 sh label: '', script: 'terraform validate'
	       }
        }
	
   }
}
